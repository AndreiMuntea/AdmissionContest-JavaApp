<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CandidatesGUI.CandidatesGUIController">
   <left>
      <VBox fx:id="leftPane" prefHeight="528.0" prefWidth="319.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <TableView fx:id="candidatesTable" prefHeight="495.0" prefWidth="319.0">
              <columns>
                <TableColumn fx:id="candidateName" prefWidth="224.0" text="Name" />
                <TableColumn fx:id="candidateGrade" prefWidth="93.0" text="Grade" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </left>
   <right>
      <VBox fx:id="rightPane" prefHeight="380.0" prefWidth="449.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <VBox fx:id="detailsBox" prefHeight="245.0" prefWidth="439.0" spacing="10.0">
               <children>
                  <Label prefHeight="21.0" prefWidth="463.0" text="Data input">
                      <font>
                          <Font name ="Times New Roman" size="22" />
                      </font>
                  </Label>
                  <TextField fx:id="IDTextField" promptText="ID" />
                  <TextField fx:id="nameTextField" promptText="Name" />
                  <TextField fx:id="phoneNumberTextField" promptText="Phone number" />
                  <TextField fx:id="gradeTextField" promptText="Grade" />
                  <TextField fx:id="addressTextField" prefHeight="16.0" prefWidth="294.0" promptText="Address" />
               </children>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="20.0" prefWidth="429.0" spacing="10.0">
               <opaqueInsets>
               </opaqueInsets>
               <children>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Pane prefHeight="30.0" prefWidth="286.0" />
                   <fx:define>
                       <Image fx:id="addBtnImage" url="@images/add1.png" />
                   </fx:define>
                  <Button fx:id="AddButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="36.0">
                      <tooltip>
                          <Tooltip text="Add a new candidate" />
                      </tooltip>
                      <graphic>
                          <ImageView image = "$addBtnImage"/>
                      </graphic>
                  </Button>
                   <fx:define>
                       <Image fx:id="updateBtnImage" url="@images/update1.png" />
                   </fx:define>
                  <Button fx:id="UpdateButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="39.0">
                      <tooltip>
                          <Tooltip text="Update an existing candidate" />
                      </tooltip>
                      <graphic>
                          <ImageView image = "$updateBtnImage"/>
                      </graphic>
                  </Button>
                   <fx:define>
                       <Image fx:id="deleteBtnImage" url="@images/delete1.png" />
                   </fx:define>
                  <Button fx:id="DeleteButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="45.0">
                      <tooltip>
                          <Tooltip text="Delete an existing candidate" />
                      </tooltip>
                      <graphic>
                          <ImageView image = "$deleteBtnImage"/>
                      </graphic>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="0.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="70.0" prefWidth="429.0" spacing="10.0">
               <children>
                  <Label prefHeight="21.0" prefWidth="472.0" text="Filter and export">
                      <font>
                          <Font name ="Times New Roman" size="22" />
                      </font>
                  </Label>
                   <Separator prefHeight="0.0" prefWidth="449.0"></Separator>
                  <TextField fx:id="filterByNameTextField" promptText="Filter by name" />
                  <TextField fx:id="filterByGradeTextField" promptText="Filter by grade" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Separator>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="0.0" prefWidth="439.0" spacing="10.0">
               <children>
                  <Pane prefHeight="57.0" prefWidth="178.0" />
                   <ComboBox fx:id="saveOptionComboBox" prefHeight="56.0" prefWidth="181.0">
                       <items>
                           <FXCollections fx:factory="observableArrayList">
                               <String fx:value="HTML" />
                               <String fx:value="CSV" />
                               <String fx:value="TXT" />
                           </FXCollections>
                       </items>
                       <value>
                           <String fx:value="HTML" />
                       </value>
                   </ComboBox>
                   <fx:define>
                   <Image fx:id="exportBtnImage" url="@images/export1.png" />
                    </fx:define>
                  <Button fx:id="exportButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="36.0">
                     <tooltip>
                        <Tooltip text="Export all candidates" />
                     </tooltip>
                     <graphic>
                        <ImageView image = "$exportBtnImage"/>
                     </graphic>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </right>
</BorderPane>
